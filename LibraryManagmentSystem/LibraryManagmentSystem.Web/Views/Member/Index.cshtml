@model IEnumerable<LibraryManagmentSystem.Domain.Entities.Member>

@{
    ViewData["Title"] = "Members";
      Layout = "_LayoutWithoutNavBar";
}

<h2>Members</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.FirstName</td>
                <td>@member.LastName</td>
                <td>@member.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@member.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@member.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Details" asp-route-id="@member.Id" class="btn btn-primary">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Add Member</a>
