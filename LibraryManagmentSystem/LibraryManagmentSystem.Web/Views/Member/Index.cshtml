<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Management</title>
    <link rel="stylesheet" href="~/css/newMember.css" />
    <script>
        $(document).ready(function () {
            console.log("Partial View Rendered");
        });
    </script>
</head>
<body>
    <h1>Member Management</h1>

    <h3>Add New Member</h3>
    <form id="addMemberForm" onsubmit="addMember(); return false;">
        <input type="text" id="add-firstName" placeholder="First Name" required>
        <input type="text" id="add-lastName" placeholder="Last Name" required>
        <input type="email" id="add-email" placeholder="Email" required>
        <input type="text" id="add-contactNumber" placeholder="Contact Number" required>
        <input type="date" id="add-dateOfMembership" required>
        <input type="submit" value="Add Member">
    </form>

    <div id="editForm">
        <h3>Edit Member</h3>
        <form onsubmit="updateMember(); return false;">
            <input type="hidden" id="edit-id">
            <input type="text" id="edit-firstName" placeholder="First Name" required>
            <input type="text" id="edit-lastName" placeholder="Last Name" required>
            <input type="email" id="edit-email" placeholder="Email" required>
            <input type="text" id="edit-contactNumber" placeholder="Contact Number" required>
            <input type="date" id="edit-dateOfMembership" required>
            <input type="submit" value="Save">
            <a href="javascript:void(0);" onclick="closeInput()" aria-label="Close">&#10006;</a>
        </form>
    </div>

    <p id="counter"></p>

    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Contact Number</th>
                <th>Date of Membership</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody id="members"></tbody>
    </table>

    @* <input type="button" value="Get Member List" onclick="getMembers()" /> *@
    <script src="~/js/member.js"></script>
</body>
</html>
