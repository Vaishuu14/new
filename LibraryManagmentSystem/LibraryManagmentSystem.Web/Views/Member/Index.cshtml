@model IEnumerable<LibraryManagmentSystem.Application.DTOs.MemberDto>

@{
    ViewBag.Title = "Members";
    Layout = "_LayoutWithoutNavBar";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/members.css" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Members</h2>

        <div class="mb-3 text-end">
            <a href="@Url.Action("Add", "Member")" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Add New Member
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Membership Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@member.FirstName</td>
                            <td>@member.LastName</td>
                            <td>@member.Email</td>
                            <td>@member.ContactNumber</td>
                            <td>@member.MembershipDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Member", new { id = member.Id })" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", "Member", new { id = member.Id })" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <a href="@Url.Action("Details", "Member", new { id = member.Id })" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
