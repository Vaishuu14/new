@model LibraryManagmentSystem.Application.Commands.MemberCommands.CreateMemberCommand

@{
    Layout = "_LayoutWithoutNavBar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Add Member</h2>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <a href="@Url.Action("Index", "Member")" class="btn btn-secondary">Back to Member List</a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Create" method="post">
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ContactNumber" class="control-label"></label>
                                <input asp-for="ContactNumber" class="form-control" placeholder="Enter contact number" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateOfMembership" class="control-label"></label>
                                <input asp-for="DateOfMembership" class="form-control" type="date" />
                                <span asp-validation-for="DateOfMembership" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Add Member</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
