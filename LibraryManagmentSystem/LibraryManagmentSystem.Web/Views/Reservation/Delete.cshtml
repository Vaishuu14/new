@model LibraryManagmentSystem.Application.DTOs.ReservationDto

@{
    ViewData["Title"] = "Delete Reservation";
    Layout = "_LayoutWithoutNavBar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/reservations-delete.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container mt-4">
        <h2>Delete Reservation</h2>
        <h4>Are you sure you want to delete this reservation?</h4>
        <div class="card shadow-lg mt-4">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">Book ID</dt>
                    <dd class="col-sm-10">@Model.BookId</dd>
                    <dt class="col-sm-2">Book Title</dt>
                    <dd class="col-sm-10">@Model.BookTitle</dd>
                    <dt class="col-sm-2">Member ID</dt>
                    <dd class="col-sm-10">@Model.MemberId</dd>
                    <dt class="col-sm-2">MemberName</dt>
                    <dd class="col-sm-10">@Model.MemberName</dd>
                    <dt class="col-sm-2">Reserved Date</dt>
                    <dd class="col-sm-10">@Model.ReservedDate</dd>
                    <dt class="col-sm-2">Expiration Date</dt>
                    <dd class="col-sm-10">@Model.ExpirationDate</dd>
                </dl>
            </div>
        </div>
        
        <div class="mt-4">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
</body>
</html>
