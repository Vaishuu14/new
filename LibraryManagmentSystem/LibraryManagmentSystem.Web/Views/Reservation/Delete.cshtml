@model LibraryManagmentSystem.Application.DTOs.ReservationDto

@{
    Layout = "_LayoutWithoutNavBar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Reservation</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this reservation?</h3>
                    <div class="mb-3">
                        <h4 class="card-title">Book Title: @Model.BookTitle</h4>
                        <p class="card-text">Member Name: @Model.MemberName</p>
                        <p class="card-text">Reserved Date: @Model.ReservedDate.ToShortDateString()</p>
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
