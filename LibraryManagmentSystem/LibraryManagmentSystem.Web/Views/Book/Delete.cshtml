@model LibraryManagmentSystem.Application.DTOs.BookDto
@{
    
    Layout = "_LayoutWithoutNavBar";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Book</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this book?</h3>
                    <div class="mb-3">
                        <h4 class="card-title">@Model.Title</h4>
                        <p class="card-text">Author: @Model.Author</p>
                    </div>
                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
