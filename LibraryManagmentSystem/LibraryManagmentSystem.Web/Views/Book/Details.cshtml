@model LibraryManagmentSystem.Application.DTOs.BookDto

@{
    ViewData["Title"] = "Book Details";
    Layout = "_LayoutWithoutNavBar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="mb-0">Book Details</h1>
                </div>
                <div class="card-body">
                    <h4 class="card-title">@Model.Title</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">
                            Author:
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Author
                        </dd>
                        <dt class="col-sm-4 font-weight-bold">
                            Published Date:
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PublishedDate.ToShortDateString()
                        </dd>
                        <dt class="col-sm-4 font-weight-bold">
                            Copies Available:
                        </dt>
                        <dd class="col-sm-8">
                            @Model.NumberOfCopies
                        </dd>
                    </dl>

                    @if (Model.NumberOfCopies > 0)
                    {
                        <form asp-action="ReserveBook" method="post">
                            <input type="hidden" name="bookId" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary">Reserve</button>
                        </form>
                    }
                    else
                    {
                        <p class="text-danger">This book is currently reserved.</p>
                    }

                    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
