<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Management</title>
    <link rel="stylesheet" href="~/css/book.css" />
        <script>
        $(document).ready(function () {
            debugger;
            console.log("Partial View Rendered");
        });
</script>
 
</head>
<body>
    <h1>Book Management</h1>

    <h3>Add New Book</h3>
    <form id="addBookForm" onsubmit="addBook(); return false;">
        <input type="text" id="add-title" placeholder="Book Title" required>
        <input type="text" id="add-author" placeholder="Book Author" required>
        <input type="text" id="add-isbn" placeholder="Book ISBN" required>
        <input type="date" id="add-publishedDate" required>
        <input type="number" id="add-numberOfCopies" placeholder="Number of Copies" required>
        <input type="submit" value="Add Book">
    </form>

    <div id="editForm">
        <h3>Edit Book</h3>
        <form onsubmit="updateBook(); return false;">
            <input type="hidden" id="edit-id">
            <input type="text" id="edit-title" placeholder="Book Title" required>
            <input type="text" id="edit-author" placeholder="Book Author" required>
            <input type="text" id="edit-isbn" placeholder="Book ISBN" required>
            <input type="date" id="edit-publishedDate" required>
            <input type="number" id="edit-numberOfCopies" placeholder="Number of Copies" required>
            <input type="submit" value="Save">
            <a href="javascript:void(0);" onclick="closeInput()" aria-label="Close">&#10006;</a>
        </form>
    </div>

    <p id="counter"></p>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Published Date</th>
                <th>Number of Copies</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody id="books"></tbody>
    </table>

    @* <input type="button" value="Get Book List" onclick="getBooks()" /> *@
    <script src="~/js/book.js" defer></script>
    <script>
        getReservations(); // Call to load reservations when the page is ready
    </script>
</body>
</html>
    

