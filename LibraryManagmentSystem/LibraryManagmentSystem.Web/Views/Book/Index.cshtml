@model IEnumerable<LibraryManagmentSystem.Application.DTOs.BookDto>

<h2>Books</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@book.Id">Delete</a> |
                    <a asp-action="Details" asp-route-id="@book.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" class="btn btn-primary">Add New Book</a>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('a[data-target]').click(function (e) {
                e.preventDefault();
                var target = $(this).data('target');
                $('.content-section').removeClass('active');
                $('#' + target).addClass('active');
            });
        });
    </script>
}