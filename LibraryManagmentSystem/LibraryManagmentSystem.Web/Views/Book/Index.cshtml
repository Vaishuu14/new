@model IEnumerable<LibraryManagmentSystem.Application.DTOs.BookDto>

@{
    ViewBag.Title = "Books";
    Layout = "_LayoutWithoutNavBar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container custom-container mt-4">
        <h2 class="mb-4">Books</h2>

        <div class="d-flex justify-content-between mb-4">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Books
            </a>
            <a href="@Url.Action("AdminDashboard", "Home")" class="btn btn-secondary">
                <i class="bi bi-house-door"></i> Back to Dashboard
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td class="text-center">
                                <a class="btn btn-warning btn-sm me-2" asp-action="Edit" asp-route-id="@book.Id">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-sm me-2 text-white" asp-action="Delete" asp-route-id="@book.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <a class="btn btn-info btn-sm text-white" asp-action="Details" asp-route-id="@book.Id">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
    <input type="button" value="Get Book List" onclick="getItems()" />
<script src="~/js/site.js" ></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
</body>
</html>

