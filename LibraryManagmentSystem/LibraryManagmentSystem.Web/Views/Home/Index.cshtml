@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Library Management System</h1>

    <!-- Image -->
    <img src="~/images/libraryHome.jpg" alt="Library Logo" class="img-fluid my-4" />

    <!-- Links for login and registration -->
    <div class="mt-4">
        @if (User.Identity.IsAuthenticated)
        {
            <p class="lead">Welcome, @User.Identity.Name!</p>
            <a class="btn btn-warning" href="@Url.Action("Logout", "Home")">Logout</a>
        }
        else
        {
            <a class="btn btn-primary" href="@Url.Action("Login", "Home")">Login</a>
            <a class="btn btn-secondary" href="@Url.Action("Registration", "Home")">Register</a>
        }
    </div>
</div>
